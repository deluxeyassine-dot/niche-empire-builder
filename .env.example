# Google Gemini API Configuration
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key-here

# Anthropic Claude API Configuration (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Image Generation API Keys (at least one required for image generation)

# OpenAI DALL-E API
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Stability AI API
# Get your key at: https://platform.stability.ai/account/keys
STABILITY_API_KEY=sk-your-stability-key-here

# Replicate API
# Get your token at: https://replicate.com/account/api-tokens
REPLICATE_API_KEY=r8_your-replicate-key-here

# Google Imagen API (optional)
# Get your key at: https://cloud.google.com/vertex-ai/docs/generative-ai/image/overview
GOOGLE_IMAGEN_API_KEY=your-google-imagen-key-here
GOOGLE_PROJECT_ID=your-google-project-id

# Video Generation API Keys (at least one required for video generation)

# Runway Gen-2/Gen-3 API
# Get your key at: https://runwayml.com/
RUNWAY_API_KEY=your-runway-api-key-here

# Pika Labs API
# Get your key at: https://pika.art/
PIKA_API_KEY=your-pika-api-key-here

# Synthesia API (for avatar-based videos)
# Get your key at: https://www.synthesia.io/
SYNTHESIA_API_KEY=your-synthesia-api-key-here

# ElevenLabs API (for voiceovers - optional)
# Get your key at: https://elevenlabs.io/
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# YouTube Automation (OAuth2 Credentials)
# Setup guide: src/automation/YOUTUBE_SETUP.md
# Get credentials at: https://console.cloud.google.com/
YOUTUBE_CLIENT_ID=your-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/oauth2callback
YOUTUBE_ACCESS_TOKEN=
YOUTUBE_REFRESH_TOKEN=

# Instagram Automation (Graph API)
# Setup guide: src/automation/INSTAGRAM_SETUP.md
# Get tokens at: https://developers.facebook.com/tools/explorer/
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id

# TikTok Automation (Content Posting API)
# Setup guide: src/automation/TIKTOK_SETUP.md
# Get credentials at: https://developers.tiktok.com/
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=http://localhost:3000/callback
TIKTOK_ACCESS_TOKEN=your-access-token
TIKTOK_REFRESH_TOKEN=your-refresh-token

# Pinterest Automation (E-COMMERCE PRIORITY)
# Setup guide: src/automation/PINTEREST_SETUP.md
# Get credentials at: https://developers.pinterest.com/
PINTEREST_CLIENT_ID=your-pinterest-client-id
PINTEREST_CLIENT_SECRET=your-pinterest-client-secret
PINTEREST_REDIRECT_URI=https://yourdomain.com/auth/pinterest/callback
PINTEREST_ACCESS_TOKEN=your-access-token
PINTEREST_REFRESH_TOKEN=your-refresh-token

# Supabase Configuration (REQUIRED for agents)
# Get your credentials at: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Application Configuration
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_APP_NAME=Niche Empire Builder
NEXT_PUBLIC_APP_VERSION=2.0.0

# Output Directories
IMAGE_OUTPUT_DIR=./generated-images
CONTENT_OUTPUT_DIR=./generated-content
VIDEO_OUTPUT_DIR=./generated-videos
